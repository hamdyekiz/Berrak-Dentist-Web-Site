    <div class="bodyContent">
        <div style="padding:2rem">
            <div class="right-page">
                <div style="display: flex;">
                    <div style="flex:10;">
                        <h2 id="randevuHeader">Geçmişe Eklenmeyi Bekleyen Randevular</h2>
                    </div>
                    <div style="flex:1;">
                        <button class="add-btn" id="addDoctorBtn" onclick="toggleForm()" style="width: 190px;">+ Geçmiş Randevu Ekle</button>
                    </div>
                    <div class="form-popup" id="myForm" style="max-height: 400px; overflow-y: auto;">
                
                       <form action="/admin_panel/create_past_patient_appointment/" method="post" class="form-container">
                        
                            <div style="display: flex; gap: 50px;">
                                <h1>Geçmiş Randevu Ekle</h1>
                                <a style="cursor: pointer;" onclick="closeForm()"><img
                                        src="data:image/png;base64," /></a>
                            </div>

                            <label for="Name"></label>
