      const surnameInput = form.querySelector('input[name="personelSurname"]');
    
      // Input alanlarının değerlerine ulaştık
      const nameValue = nameInput.value;
      const surnameValue = surnameInput.value;

      showSearchedPatients(nameValue, surnameValue);
      

    }

