    <script>

        window.addEventListener("DOMContentLoaded", function(){
            showAppointments();
        });

        var d_table = document.getElementById("randevuTable");

        // Get the number of rows in the table
        var d_rowCount = d_table.rows.length - 1;

        // Update the heading dynamically
        var d_header = document.getElementById("randevuHeader");
        d_header.innerHTML = "Doktorlar (" + d_rowCount + ")";

        function openForm() {
            var form = document.getElementById("myForm");
            var side_bar = document.querySelector(".side-bar-light");
            var body = document.body;
            var addDoctorBtn = document.getElementById("addDoctorBtn");
            
                side_bar.style.opacity = "0.5";
               form.style.display = "block";
                body.classList.add("darken-bg");
                d_table.style.opacity = "0.5"; // Set opacity for the table when the form is open
                addDoctorBtn.disabled = true; // Disable the button when the form is open
                setInteractionsEnabled(false);
                addDoctorBtn.style.opacity = "0.5"; 
        }

        function closeForm() {
            var form = document.getElementById("myForm");
            var body = document.body;
            var addDoctorBtn = document.getElementById("addDoctorBtn");
            var side_bar = document.querySelector(".side-bar-light");
            side_bar.style.opacity = "1";
           form.style.display = "none";
            body.classList.remove("darken-bg");
            d_table.style.opacity = "1"; // Reset opacity when the form is closed
            addDoctorBtn.disabled = false; // Enable the button when the form is closed
            setInteractionsEnabled(true);
            addDoctorBtn.style.opacity = "1"; 
        }

        function toggleLink(event) {
            var form = document.getElementById("myForm");
            if (form.style.display === "block") {
                event.preventDefault();
            }
        }

        function setInteractionsEnabled(enabled) {
            // Disable/enable anchor links
            var links = document.querySelectorAll(".list-container a");
            links.forEach(function (link) {
                link.classList.toggle("disabled", !enabled); // Add or remove the disabled class
            });

            // Disable/enable buttons in the table
            var buttons = document.querySelectorAll(".add-btn");
            buttons.forEach(function (button) {
                button.disabled = !enabled; // Set the disabled property
            });

            var logbtn = document.querySelector('.logout-button');
            var tp1 = document.querySelector('.tp1');
            var tp2 = document.querySelector('.tp2');
            tp1.classList.toggle("disabled-link",!enabled);
            tp2.classList.toggle("disabled-link",!enabled);
            logbtn.classList.toggle("disabled-link",!enabled);
            
       }


        function showAppointments() {
            fetch('/admin_panel/read_appointment_requests')
              .then(response => response.json())
              .then(doctors => {
                const appointmentsContainer = document.getElementById('appointmentsContainer');
                appointmentsContainer.innerHTML = ''; // Clear previous content
        
                doctors.forEach(patient => {
                  // if patient.doctor have a name like this Dt. Özgür Kaldırım remove the Dt. 
                  let doctorName = patient.doctor;
                  if (doctorName.includes("Dt. ")) {
                    doctorName = doctorName.replace("Dt. ", "");
                  }
                  // and the doctorName will be like this Özgür Kaldırım
                  doctorName = doctorName.toLowerCase().split(' ').map(word => word.charAt(0).toUpperCase() + word.substring(1)).join(' ');
                  const patientInfo = `
                    <tr>
                      <td>${patient.name}</td>
                      <td>${patient.telNo}</td>
                      <td>${patient.email}</td>
                      <td>${patient.availableHours}</td>
                      <td>${patient.doctor}</td>
                      <td>${patient.complaint}</td>
                      <td>
                        <div  style="display: flex; gap: 10px;">

                        <button class="add-btn" onclick="openUpdateForm('${patient._id}', '${patient.name}', '${patient.telNo}', '${patient.email}', '${patient.availableHours}', '${patient.doctor}', '${patient.complaint}')">Ekle</button>
                        <button class="add-btn" onclick="deletePatient('${patient._id}')">Kaldır</button>
                          <div>
                        </td>
                      
                    </tr>
                  `;
        
                  appointmentsContainer.innerHTML += patientInfo;
                  //console.log("ID in showDoctors(): " + patient._id);
                });

                updateAppointmentsCount(doctors.length);

              })
              .catch(error => console.error('Error fetching patients:', error));
        }

        function updateAppointmentsCount(count) {
            var d_header = document.getElementById("randevuHeader");
            d_header.innerHTML = "Randevu Talepleri (" + count + ")";
        }

        function splitName(name) {
            const nameArray = name.split(' ');

            if (nameArray.length > 1) {
                const name_ = nameArray.slice(0, -1).join(' ');
                const surname_ = nameArray.slice(-1).join(' ');
                return { name_, surname_ };
            } else {
                const name_ = nameArray[0];
                const surname_ = '';
                return { name_, surname_ };
            }
        }

          function openUpdateForm(id, name, telNo, email, availableHours, doctor, complaint ) {
            //console.log("open Update'deyim!!!!!!!");
            //console.log("ID İn openUpdateform: " + id);
          
            // Formu seç
            const form = document.getElementById('myUpdateForm');
            const body = document.body;

            const { name_, surname_ } = splitName(name);

            body.classList.add("darken-bg");          
            d_table.style.opacity = "0.5"; // Set opacity for the table when the form is open
                //addDoctorBtn.disabled = true; // Disable the button when the form is open
                setInteractionsEnabled(false);
                //addDoctorBtn.style.opacity = "0.4"
            // Form alanlarını doldur

            var side_bar = document.querySelector(".side-bar-light");
            side_bar.style.opacity = "0.5";
            form.querySelector('input[name="_id"]').value = id;
            form.querySelector('input[name="name"]').value = name_;
            form.querySelector('input[name="surname"]').value = surname_;
            form.querySelector('input[name="phoneNum"]').value = telNo;
            form.querySelector('input[name="email"]').value = email;
            //form.querySelector('input[name="availableHours"]').value = availableHours;
            form.querySelector('input[name="doctor"]').value = doctor;
            form.querySelector('input[name="more"]').value = complaint;
          
            // Formu görünür hale getir
            form.style.display = 'block';
          }
          
      
          function closeUpdateForm() {
            const form = document.getElementById('myUpdateForm');
            form.style.display = 'none';
            const body = document.body;
            var side_bar = document.querySelector(".side-bar-light");
            side_bar.style.opacity = "1";
body.classList.remove("darken-bg");          
d_table.style.opacity = "1"; // Set opacity for the table when the form is open
    //addDoctorBtn.disabled = false; // Disable the button when the form is open
    setInteractionsEnabled(true);
    //addDoctorBtn.style.opacity = "1"
          }



          async function deletePatient(id) {
            var confirmAction = confirm("Randevu talebini kaldırmak istediğinize emin misiniz?");
    if (!confirmAction) {
        return;
    } else {
            try {
                const response = await fetch('/admin_panel/delete_appointment_request', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        _id: id
                    }),
                });
        
                if (response.ok) {
                    // Alert göster
                    alert('Randevu talebi başarıyla silindi!');
                    // '/admin_panel/doktorlar' sayfasına yönlendir
                    window.location.href = '/admin_panel/randevu_talepleri/';
                } else {
                    console.error('Error deleting Randevu talebi:', response.statusText);
                    // Hata işleme
                    alert('Randevu talebi silinemedi: ' + response.statusText);
                }
            } catch (error) {
                console.error('Error deleting Randevu talebi:', error.message);
                // Hata işleme
                alert('Randevu talebi silinemedi: ' + error.message);
            }
        }
      }


            // make the name and email fit in the navbar
