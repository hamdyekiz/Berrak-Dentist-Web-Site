    <div class="bodyContent">
        <div style="padding:2rem">
            <div class="right-page">
                <div style="display: flex;">
                    <div style="flex:10;">
                        <h2 id="randevuHeader">Hastalar</h2>
                    </div>

                    <div style="flex:1;">
                      <button class="add-btn" id="addDoctorBtn" onclick="toggleForm()">Ara</button>
                  </div>
                  <div class="form-popup" id="myForm" style="max-height: 400px; overflow-y: auto;">
              
                     <form onsubmit="searchPatient(event)" class="form-container">
                      
                          <div style="display: flex; gap: 50px;">
                              <h1>Ara</h1>
                              <a style="cursor: pointer;" onclick="closeForm()"><img
                                      src="data:image/png;base64," /></a>
                          </div>

                          <label for="Name"></label>
                          <input type="text" placeholder="Hasta Adı" name="personelName" required>

                          <label for="surname"></label>
                          <input type="text" placeholder="Hasta Soyadı" name="personelSurname" required>

                          <button type="submit" class="btn">Ara</button>
                      </form>
                  </div>

                </div>



                <br />
                <table id="randevuTable">
                    <thead>
                      <tr>
                        <th>Hasta Adı</th>
                        <th>Hasta Soyadı</th>
                        <th>Telefon</th>
                        <th>E-posta</th>
                        <th>Eylemler</th>
                      </tr>
                    </thead>
                    <tbody id="appointmentsContainer">
                      <!-- Doctors information will be displayed here -->
                    </tbody>
                  </table>

                  <div class="form-popup" id="myUpdateForm" style="max-height: 400px; overflow-y: auto;">
                    <form action="/admin_panel/update_patient_history/" method="post" class="form-container">
                      <div style="display: flex; gap: 50px;">
                        <h1>Kayıtlı Hasta Bilgilerini Güncelle</h1>
                        <a style="cursor: pointer;" onclick="closeUpdateForm()">
                          <img src="data:image/png;base64," />
                        </a>
                      </div>

                            

                            <label for="ID"></label>
                            <input type="text" placeholder="ID" name="_id" required readonly style="display: none;">


                            <label for="Name"></label>
                            <input type="text" placeholder="Hasta Adı" name="name" required>

                            <label for="surname"></label>
                            <input type="text" placeholder="Hasta Soyadı" name="surname" required>

                            <label for="phoneNum"></label>
                            <input type="text" placeholder="Telefon" name="phoneNum" required>

                            <label for="email"></label>
                            <input type="text" placeholder="Email" name="email">

                      <button type="submit" class="btn">Güncelle</button>
                    </form>
                  </div>

 
                  <div class="form-popup" id="myRecordUpdateForm" style="max-height: 400px; overflow-y: auto;">
                    <form action="/admin_panel/update_one_record/" method="post" class="form-container">
                      <div style="display: flex; gap: 50px;">
                        <h1>Hasta Geçmişini Güncelle</h1>
                        <a style="cursor: pointer;" onclick="closeRecordUpdateForm()">
                          <img src="data:image/png;base64," />
                        </a>
                      </div>

                            <label for="patientID"></label>
                            <input type="text" placeholder="patientID" name="_patientID" required readonly style="display: none;">

                            <label for="ID"></label>
                            <input type="text" placeholder="ID" name="_id" required readonly style="display: none;">


                            <label for="Doctor"></label>
                            <input type="text" placeholder="Doktor" name="doctor" required>

                            <label for="clinic"></label>
                            <input type="text" placeholder="Klinik" name="clinic" required>

                            <label for="date"></label>
                            <input type="text" placeholder="Tarih" name="date" required>

                            <label for="time"></label>
                            <input type="text" placeholder="Saat" name="time">

                            <label for="price"></label>
                            <input type="text" placeholder="Ücret" name="price" required>

                            <label for="more"></label>
                            <input type="text" placeholder="Daha Fazla" name="more">

