    <% if (addAssistantSuccessful) { %>
      <script>alert("Asistan başarıyla eklendi!");</script>
    <% } else { %>
      <script>alert("Asistan eklenemedi!");</script>
    <% } %>
  <% } %>    

  <!-- eğer ekleme başarısız olduysa alert çıkar. -->
  <% if (typeof updateAssistantSuccessful !== 'undefined') { %>
    <% if (updateAssistantSuccessful) { %>
      <script>alert("Asistan bilgileri başarıyla güncellendi!");</script>
    <% } else { %>
      <script>alert("Asistan bilgileri güncellenemedi!!");</script>
    <% } %>
  <% } %> 


  <!-- delete olduğu zaman uyarı çıkar. -->
  <% if (typeof deleteAssistantSuccessful !== 'undefined') { %>
    <% if (deleteAssistantSuccessful) { %>
      <script>alert("Asistan sistemden silindi!");</script>
    <% } else { %>
