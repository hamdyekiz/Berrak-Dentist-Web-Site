                    </form>
                  </div>





                  <div id="popup" class="popup">
                    <div class="popup-content">
                        <span class="close" onclick="closePopup()">&times;</span>
                        <h2>Hasta Geçmişi</h2>
                        <table id="recordTable">
                          <!-- <thead>
                            <tr>
                              <th>Doktor</th>
                              <th>Klinik</th>
                              <th>Tarih</th>
                              <th>Saat</th>
                              <th>Ücret</th>
