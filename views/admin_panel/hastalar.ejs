    <script>

        window.addEventListener("DOMContentLoaded", function(){
            showAppointments();
        });
        

        var d_table = document.getElementById("randevuTable");

        // Get the number of rows in the table
        var d_rowCount = d_table.rows.length - 1;

        // Update the heading dynamically
        var d_header = document.getElementById("randevuHeader");
        d_header.innerHTML = "Hastalar (" + d_rowCount + ")";

        function toggleForm() {
            var form = document.getElementById("myForm");
            var body = document.body;
            var addDoctorBtn = document.getElementById("addDoctorBtn");

            if (form.style.display === "block") {
                form.style.display = "none";
                body.classList.remove("darken-bg");
                d_table.style.opacity = "1"; // Reset opacity when form is closed
                addDoctorBtn.disabled = false; // Enable the button when the form is closed
                setInteractionsEnabled(true);
            } else {
                form.style.display = "block";
                body.classList.add("darken-bg");
                d_table.style.opacity = "0.5"; // Set opacity for the table when the form is open
                addDoctorBtn.disabled = true; // Disable the button when the form is open
                setInteractionsEnabled(false);
            }
        }

        function closeForm() {
            var form = document.getElementById("myForm");
            var body = document.body;
            var addDoctorBtn = document.getElementById("addDoctorBtn");

            form.style.display = "none";
            body.classList.remove("darken-bg");
            d_table.style.opacity = "1"; // Reset opacity when the form is closed
            addDoctorBtn.disabled = false; // Enable the button when the form is closed
            setInteractionsEnabled(true);
        }

        function toggleLink(event) {
            var form = document.getElementById("myForm");
            if (form.style.display === "block") {
                event.preventDefault();
            }
        }

        function setInteractionsEnabled(enabled) {
            // Disable/enable anchor links
            var links = document.querySelectorAll(".list-container a");
            links.forEach(function (link) {
                link.classList.toggle("disabled", !enabled); // Add or remove the disabled class
            });

            // Disable/enable buttons in the table
            var buttons = document.querySelectorAll(".event-buttons button");
            buttons.forEach(function (button) {
                button.disabled = !enabled; // Set the disabled property
            });

            // Disable/enable the logout button
            var logoutButton = document.querySelector(".logout-button");
            logoutButton.disabled = !enabled;
        }


        function showAppointments() {
            fetch('/admin_panel/read_patient_histories')
              .then(response => response.json())
              .then(doctors => {
                const appointmentsContainer = document.getElementById('appointmentsContainer');
                appointmentsContainer.innerHTML = ''; // Clear previous content
        
                doctors.forEach(patient => {
                  const patientInfo = `
                    <tr>
                      <td>${patient.name}</td>
                      <td>${patient.surname}</td>
                      <td>${patient.phoneNum}</td>
                      <td>${patient.email}</td>
                      <td>
                        <button onclick="openUpdateForm('${patient._id}', '${patient.name}', '${patient.surname}', '${patient.phoneNum}', '${patient.email}')">Güncelle</button>
                        <button onclick="deletePatient('${patient._id}')">Kaldır</button>
                        <button onclick="showRecordsofPatient('${patient._id}')">Geçmişi Göster</button>
                        
                      </td>
                      
                    </tr>
                  `;
        
                  appointmentsContainer.innerHTML += patientInfo;
                  //console.log("ID in showDoctors(): " + patient._id);
                });

                updateAppointmentsCount(doctors.length);

              })
              .catch(error => console.error('Error fetching patients:', error));
        }

        function updateAppointmentsCount(count) {
            var d_header = document.getElementById("randevuHeader");
            d_header.innerHTML = "Hastalar (" + count + ")";
          }


          function openUpdateForm(id, name, surname, phoneNum, email) {
            //console.log("open Update'deyim!!!!!!!");
            //console.log("ID İn openUpdateform: " + id);
          
            // Formu seç
            const form = document.getElementById('myUpdateForm');
          
            // Form alanlarını doldur
            form.querySelector('input[name="_id"]').value = id;
            form.querySelector('input[name="name"]').value = name;
            form.querySelector('input[name="surname"]').value = surname;
            form.querySelector('input[name="phoneNum"]').value = phoneNum;
            form.querySelector('input[name="email"]').value = email;
          
            // Formu görünür hale getir
            form.style.display = 'block';
          }
          
      
          function closeUpdateForm() {
            const form = document.getElementById('myUpdateForm');
            form.style.display = 'none';
          }



          async function deletePatient(id) {
            try {
                const response = await fetch('/admin_panel/delete_patient_history', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        _id: id
                    }),
                });
        
                if (response.ok) {
                    // Alert göster
                    alert('Hasta historysi başarıyla silindi!');
                    // '/admin_panel/doktorlar' sayfasına yönlendir
                    window.location.href = '/admin_panel/hastalar/';
                } else {
                    console.error('Error deleting patient history:', response.statusText);
                    // Hata işleme
                    alert('historysi silinemedi: ' + response.statusText);
                }
            } catch (error) {
                console.error('Error deleting patient history:', error.message);
                // Hata işleme
                alert('historysi silinemedi: ' + error.message);
            }
        }

        //Async yazılmalı mı başına? 
        function showRecordsofPatient(patientId) {
          // Make a GET request to fetch patient records
          document.getElementById("popup").style.display = "block";
          fetch(`/admin_panel/read_patient_records/${patientId}`)
            .then(response => response.json())
            .then(records => {
              // Create a pop-up with a table to display patient records
              const recordsContainer = document.getElementById('recordsContainer');
              recordsContainer.innerHTML = ''; // Clear previous content
              const popupContent = `
                <div class="popup">
                  <table>
                    <thead>
                      <tr>
                        <th>Doktor</th>
                        <th>Klinik</th>
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Ücret</th>
                        <th>Daha Fazla</th>
                        <th>Doktor Yorumu</th>
                        <th>Eylemler</th>
                      </tr>
                    </thead>
                    <tbody>
                      ${records.map(record => `
                        <tr>
                          <td>${record.doctor}</td>
                          <td>${record.clinic}</td>
                          <td>${record.date}</td>
                          <td>${record.time}</td>
                          <td>${record.price}</td>
                          <td>${record.more}</td>
                          <td>${record.doctorComment}</td>
                          <td>
                            <button onclick="openRecordUpdateForm('${patientId}', '${record._id}', '${record.doctor}', '${record.clinic}', '${record.date}', '${record.time}', '${record.price}', '${record.more}', '${record.doctorComment}')">Güncelle</button>
                            <button onclick="deleteRecord('${patientId}', '${record._id}')">Kaldır</button>
                          </td>
                        </tr>
                      `).join('')}
                    </tbody>
                  </table>
                  <button onclick="closePopup()">Close</button>
                </div>
              `;
        
              // Append the pop-up content to the body
              //document.body.insertAdjacentHTML('beforeend', popupContent);
              recordsContainer.innerHTML += popupContent;
            })
            .catch(error => console.error('Error fetching patient records:', error));
        }
        /*
        function closePopup() {
          // Remove the pop-up from the DOM
          const popup = document.querySelector('.popup');
          if (popup) {
            popup.remove();
          }
        }
        */

        document.getElementById("popup").style.display = "none";


        function openPopup() {
          document.getElementById("popup").style.display = "block";
        }
      
      // Function to Close the Popup
      function closePopup() {
          document.getElementById("popup").style.display = "none";
      }
        
      async function deleteRecord(patient_id, record_id) {
        try {
            const response = await fetch('/admin_panel/delete_one_record', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    _patient_id: patient_id,
                    _record_id: record_id
                }),
            });
    
            if (response.ok) {
                // Alert göster
                alert('Hasta recordu başarıyla silindi!');
                // '/admin_panel/doktorlar' sayfasına yönlendir
                window.location.href = '/admin_panel/hastalar/';
            } else {
                console.error('Error deleting patient record:', response.statusText);
                // Hata işleme
                alert('record silinemedi: ' + response.statusText);
            }
        } catch (error) {
            console.error('Error deleting patient record:', error.message);
            // Hata işleme
            alert('record silinemedi: ' + error.message);
        }
    }

    function openRecordUpdateForm(patientId, _id, doctor, clinic, date, time, price, more, doctorComment){

      const form = document.getElementById('myRecordUpdateForm');
          
      // Form alanlarını doldur
      form.querySelector('input[name="_patientID"]').value = patientId;
      form.querySelector('input[name="_id"]').value = _id;
      form.querySelector('input[name="doctor"]').value = doctor;
      form.querySelector('input[name="clinic"]').value = clinic;
      form.querySelector('input[name="date"]').value = date;
      form.querySelector('input[name="time"]').value = time;
      form.querySelector('input[name="price"]').value = price;
      form.querySelector('input[name="more"]').value = more;
      form.querySelector('input[name="doctorComment"]').value = doctorComment;
    
      // Formu görünür hale getir
      form.style.display = 'block';

    }

    function closeRecordUpdateForm() {
      const form = document.getElementById('myRecordUpdateForm');
      form.style.display = 'none';
    }


    function searchPatient(event) {
      event.preventDefault();  // Formun otomatik submit olmasını engelle
      
      const form = event.target;

      // Formdaki input alanlarına ulaşıldı
      const nameInput = form.querySelector('input[name="personelName"]');
      const surnameInput = form.querySelector('input[name="personelSurname"]');
    
      // Input alanlarının değerlerine ulaştık
      const nameValue = nameInput.value;
      const surnameValue = surnameInput.value;

      showSearchedPatients(nameValue, surnameValue);
      

    }

    function showSearchedPatients(name, surname){
      console.log("showSearchedPatients başı");
      fetch(`/admin_panel/read_searched_patient/${name}/${surname}`)
      .then(response => response.json())
      .then(doctors => {
        const appointmentsContainer = document.getElementById('appointmentsContainer');
        appointmentsContainer.innerHTML = ''; // Clear previous content

        doctors.forEach(patient => {
          const patientInfo = `
            <tr>
              <td>${patient.name}</td>
              <td>${patient.surname}</td>
              <td>${patient.phoneNum}</td>
              <td>${patient.email}</td>
              <td>
                <button onclick="openUpdateForm('${patient._id}', '${patient.name}', '${patient.surname}', '${patient.phoneNum}', '${patient.email}')">Güncelle</button>
                <button onclick="deletePatient('${patient._id}')">Kaldır</button>
                <button onclick="showRecordsofPatient('${patient._id}')">Geçmişi Göster</button>
                
              </td>
              
            </tr>
          `;

          appointmentsContainer.innerHTML += patientInfo;
          //console.log("ID in showDoctors(): " + patient._id);
        });

        updateAppointmentsCount(doctors.length);

      })
      .catch(error => console.error('Error fetching patients:', error));


    }

    // make the name and email fit in the navbar
    window.addEventListener('DOMContentLoaded', (event) => {
        const navbarBrands = document.querySelectorAll('.navbar-brand');
        navbarBrands.forEach(element => {
            adjustFontSizeToFit(element);
        });
    });

    function adjustFontSizeToFit(element) {
        const maxWidth = element.offsetWidth; // Get the maximum width of the container
        let fontSize = window.getComputedStyle(element, null).getPropertyValue('font-size');
        fontSize = parseFloat(fontSize);

        while (element.scrollWidth > maxWidth && fontSize > 10) { // Minimum font size is 10px
            fontSize -= 1; // Decrease font size
            element.style.fontSize = fontSize + 'px';
        }
    }


    </script>
