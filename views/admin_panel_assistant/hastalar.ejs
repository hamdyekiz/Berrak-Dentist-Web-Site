          async function deletePatient(id) {
            var confirmAction = confirm("Hastayı kaldırmak istediğinize emin misiniz?");
    if (!confirmAction) {
        return;
    } else {
      
    
            try {
                const response = await fetch('/admin_panel/delete_patient_history', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        _id: id
                    }),
                });
        
                if (response.ok) {
                    // Alert göster
                    alert('Hasta historysi başarıyla silindi!');
                    // '/admin_panel/doktorlar' sayfasına yönlendir
                    window.location.href = '/admin_panel/hastalar/';
                } else {
                    console.error('Error deleting patient history:', response.statusText);
                    // Hata işleme
                    alert('historysi silinemedi: ' + response.statusText);
                }
            } catch (error) {
                console.error('Error deleting patient history:', error.message);
                // Hata işleme
                alert('historysi silinemedi: ' + error.message);
            }
          }
        }

