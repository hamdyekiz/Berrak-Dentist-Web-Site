<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Boostrap 4 responsive Sidebar template with slide in/out effect">
  <meta name="author" content="Simran Singh">
  <link rel="shortcut icon" href="data:image/x-icon;," type="image/x-icon">

  <title>Responsive sidebar - Boostrap 4 - Light</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css"
    integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
  <link rel="stylesheet" href="/admin_panel/style.css">
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
    integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>

<body>
  <div class="side-bar side-bar-light">
    <nav class="navbar navbar-inverse">
      <div style="text-align: center; display:flex;flex-direction: column;">
        <a style="color: black;" class="navbar-brand">Admin</a>
        <a style="color: gray;" class="navbar-brand">adming@gmail.com</a>
      </div>
      <button class="logout-button">Log Out</button>
      <hr />
      <div class="list-container">
        <ul>
          <!-- <li><a href="#" class="active" onclick="toggleLink(event)">Asistanlar</a></li> -->
          <!-- redirect to these url's of the website like berrakdis.com/admin_panel/gelecel_randevular/ -->
          <li><a href="/admin_panel/doktorlar/" onclick="toggleLink(event)">Doktorlar</a></li>
          <li><a href="/admin_panel/asistanlar/" class="active" onclick="toggleLink(event)">Asistanlar</a></li>
          <li><a href="/admin_panel/gelecek_randevular/" onclick="toggleLink(event)">Gelecek Randevular</a></li>
          <li><a href="/admin_panel/hastalar/" onclick="toggleLink(event)">Hastalar</a></li>
        </ul>
      </div>
    </nav>
  </div>
  <!-- eğer ekleme başarısız olduysa alert çıkar. -->
  <% if (typeof addAssistantSuccessful !== 'undefined') { %>
    <% if (addAssistantSuccessful) { %>
      <script>alert("Asistan başarıyla eklendi!");</script>
    <% } else { %>
      <script>alert("Asistan eklenemedi!");</script>
    <% } %>
  <% } %>

  <!-- update olduğu zaman uyarı çıkar. -->
  <% if (typeof isAssistantUpdated !== 'undefined') { %>
    <% if (isAssistantUpdated) { %>
      <script>alert("Asistan başarıyla güncellendi!");</script>
    <% } else { %>
      <script>alert("Asistan güncellenemedi!");</script>
    <% } %>
  <% } %>


  <!-- delete olduğu zaman uyarı çıkar. -->
  <% if (typeof isAssistantDeleted !== 'undefined') { %>
    <% if (isAssistantDeleted) { %>
      <script>alert("Asistan başarıyla silindi!");</script>
    <% } else { %>
      <script>alert("Asistan silinemedi!");</script>
    <% } %>
  <% } %>
  
  
  <div class="bodyContent">
    <div style="padding:2rem">
      <div class="right-page">
        <div style="display: flex;">
          <div style="flex:10;">
            <h2 id="assistantsHeader">Asistanlar</h2>
          </div>
          <div style="flex:1;"> <button class="add-btn" id="addAssistantBtn" onclick="toggleForm()">+ Asistan Ekle</button>
          </div>
          <div class="form-popup" id="myForm">
            <form action="/admin_panel/create_assistant/" method="post" class="form-container">
              <div style="display: flex; gap: 50px;">
                <h1>Asistan Ekle</h1>
                <a style="cursor: pointer;" onclick="closeForm()"><img
                    src="data:image/png;base64," /></a>
              </div>

              <label for="name"><b></b></label>
              <input type="text" placeholder="Asistan Adı" name="personelName" required>

              <label for="surname"><b></b></label>
              <input type="text" placeholder="Asistan Soyadı" name="personelSurname" required>

              <label for="phoneNum"><b></b></label>
              <input type="text" placeholder="Telefon Numarası (5XX)" name="personelPhoneNum" pattern="[0-9]{10}" inputmode="numeric" required>

              <label for="email"><b></b></label>
              <input type="email" placeholder="Email adresi" name="personelEmail" required>

              <label for="password"><b></b></label>
              <input type="text" placeholder="Şifre" name="personelPassword" required>

              <!-- <label for="features"><b></b></label>
              <input type="text" placeholder="Doktor Özellikleri" name="features" required> -->

              <button type="submit" class="btn">Ekle</button>
            </form>
          </div>
        </div>

        <br />

        <table id="assistantsTable">
          <thead>
            <tr>
              <th>Asistan Adı</th>
              <th>Asistan Soyadı</th>
              <th>E-posta</th>
              <th>Telefon Numarası</th>
              <th>Ünvan</th>
              <th>Klinik</th>
              <th>Eylemler</th>
            </tr>
          </thead>
          <tbody id="assistantsContainer">
            <!-- Doctors information will be displayed here -->
          </tbody>
        </table>

        


        <div class="form-popup" id="myUpdateForm">
          <form action="/admin_panel/update_assistant/" method="post" class="form-container">
            <div style="display: flex; gap: 50px;">
              <h1>Asistan Güncelle</h1>
              <a style="cursor: pointer;" onclick="closeUpdateForm()">
                <img src="data:image/png;base64," />
              </a>
            </div>
      
            <label for="name"><b></b></label>
            <input type="text" placeholder="Asistan Adı" name="name" required>
      
            <label for="surname"><b></b></label>
            <input type="text" placeholder="Asistan Soyadı" name="surname" required>
      
            <label for="phoneNum"><b></b></label>
            <input type="text" placeholder="Telefon Numarası (5XX)" name="phoneNum" pattern="[0-9]{10}" inputmode="numeric" required>
      
            <label for="email"><b></b></label>
            <input type="email" placeholder="Email adresi" name="email" required readonly>
      
            <label for="password"><b></b></label>
            <input type="text" placeholder="Şifre" name="password" required>

            
      
            <button type="submit" class="btn">Güncelle</button>
          </form>
        </div>



      </div>
    </div>
  </div>

  <script>
    
    window.addEventListener("DOMContentLoaded", function(){
      showAssistants();
    });
    
    // added this now to redirect the user to the homepage when the logout button is pressed.
    document.querySelector('.logout-button').addEventListener('click', function() {
      window.location.href = "/";
    });

    var d_table = document.getElementById("assistantsTable");

    // Get the number of rows in the table
    var d_rowCount = d_table.rows.length - 1;

    // Update the heading dynamically
    var d_header = document.getElementById("assistantsHeader");
    d_header.innerHTML = "Asistanlar (" + d_rowCount + ")";

    function toggleForm() {
      var form = document.getElementById("myForm");
      var body = document.body;
      var addAssistantBtn = document.getElementById("addAssistantBtn");

      if (form.style.display === "block") {
        form.style.display = "none";
        body.classList.remove("darken-bg");
        d_table.style.opacity = "1"; // Reset opacity when form is closed
        addAssistantBtn.disabled = false; // Enable the button when the form is closed
        setInteractionsEnabled(true);
      } else {
        form.style.display = "block";
        body.classList.add("darken-bg");
        d_table.style.opacity = "0.5"; // Set opacity for the table when the form is open
        addAssistantBtn.disabled = true; // Disable the button when the form is open
        setInteractionsEnabled(false);
      }
    }

    function closeForm() {
      var form = document.getElementById("myForm");
      var body = document.body;
      var addAssistantBtn = document.getElementById("addAssistantBtn");

      form.style.display = "none";
      body.classList.remove("darken-bg");
      d_table.style.opacity = "1"; // Reset opacity when the form is closed
      addAssistantBtn.disabled = false; // Enable the button when the form is closed
      setInteractionsEnabled(true);
    }

    function toggleLink(event) {
      var form = document.getElementById("myForm");
      if (form.style.display === "block") {
        event.preventDefault();
      }
    }

    function setInteractionsEnabled(enabled) {
      // Disable/enable anchor links
      var links = document.querySelectorAll(".list-container a");
      links.forEach(function (link) {
        link.classList.toggle("disabled", !enabled); // Add or remove the disabled class
      });

      // Disable/enable buttons in the table
      var buttons = document.querySelectorAll(".event-buttons button");
      buttons.forEach(function (button) {
        button.disabled = !enabled; // Set the disabled property
      });

      // Disable/enable the logout button
      var logoutButton = document.querySelector(".logout-button");
      logoutButton.disabled = !enabled;
    }


    function showAssistants() {
      fetch('/admin_panel/read_assistants')
        .then(response => response.json())
        .then(doctors => {
          const assistantsContainer = document.getElementById('assistantsContainer');
          assistantsContainer.innerHTML = ''; // Clear previous content
  
          doctors.forEach(doctor => {
            const doctorInfo = `
              <tr>
                <td>${doctor.name}</td>
                <td>${doctor.surname}</td>
                <td>${doctor.email}</td>
                <td>${doctor.phoneNum}</td>
                <td>${doctor.title}</td>
                <td>${doctor.clinic}</td>
                <td>
                  <button onclick="openUpdateForm('${doctor.email}')">Update</button>
                  <button onclick="deleteAssistant('${doctor.name}', '${doctor.surname}', '${doctor.email}')">Delete Assistant </button>
                </td>
              </tr>
            `;
  
            assistantsContainer.innerHTML += doctorInfo;
          });
          updateAssistantCount(doctors.length);

        })
        .catch(error => console.error('Error fetching assistants:', error));
  }

  function updateAssistantCount(count) {
    var d_header = document.getElementById("assistantsHeader");
    d_header.innerHTML = "Asistanlar (" + count + ")";
  }

      function openUpdateForm(email) {
        const form = document.getElementById('myUpdateForm');
        form.style.display = 'block';
  
        // Populate the form with the selected doctor's email
        const emailInput = form.querySelector('input[name="email"]');
        emailInput.value = email;
      }
  
      function closeUpdateForm() {
        const form = document.getElementById('myUpdateForm');
        form.style.display = 'none';
      }



      async function deleteAssistant(name, surname, email) {
        try {
            const response = await fetch('/admin_panel/delete_assistant', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    name: name,
                    surname: surname,
                    email: email,
                }),
            });
    
            if (response.ok) {
                // Alert göster
                alert('Asistan başarıyla silindi!');
                // '/admin_panel/doktorlar' sayfasına yönlendir
                window.location.href = '/admin_panel/asistanlar/';
            } else {
                console.error('Error deleting assistant:', response.statusText);
                // Hata işleme
                alert('Asistan silinemedi: ' + response.statusText);
            }
        } catch (error) {
            console.error('Error deleting assistant:', error.message);
            // Hata işleme
            alert('Asistan silinemedi: ' + error.message);
        }
    }
    



  </script>
</body>

</html>

